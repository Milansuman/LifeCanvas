<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox"
         xmlns:fx="http://javafx.com/fxml"
         prefWidth="360.0"
         prefHeight="360.0">
    <style>
        -fx-background-color: #1D1B20;
        -fx-background-radius: 12;
        -fx-padding: 20;
        -fx-spacing: 15;
    </style>
    <VBox VBox.vgrow="ALWAYS">
        <style>
            -fx-spacing: 15;
        </style>
        <Label text="Lorem Ipsum Dolor Sit Amet" wrapText="true" fx:id="title">
            <style>
                -fx-text-fill: #D0BCFF;
                -fx-font-size: 30;
                -fx-font-weight: bold;
            </style>
        </Label>
        <Label text="Lorem ipsum dolor sit amet" wrapText="true" fx:id="description">
            <style>
                -fx-text-fill: #CAC4D0;
                -fx-font-size: 17;
            </style>
        </Label>
    </VBox>
    <HBox fx:id="tags">
        <style>
            -fx-spacing: 10;
        </style>
    </HBox>
    <Button text="delete" fx:id="delete">
        <style>
            -fx-padding: 13;
            -fx-background-color: #633B48;
            -fx-font-weight: bold;
            -fx-font-size: 15;
            -fx-background-radius: 50;
            -fx-text-fill: #FFD8E4;
        </style>
    </Button>
</fx:root>
